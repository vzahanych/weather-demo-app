{
  "id": null,
  "title": "Weather Demo App - Logs",
  "tags": [
    "weather-app",
    "logs"
  ],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Log Level Distribution",
      "type": "piechart",
      "targets": [
        {
          "expr": "sum by (level) (count_over_time({job=\"weather-app\"} | json | __error__=\"\" [1h]))",
          "legendFormat": "{{level}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 0
      },
      "options": {
        "pieType": "pie",
        "tooltip": {
          "mode": "single"
        },
        "legend": {
          "displayMode": "table",
          "placement": "right"
        }
      }
    },
    {
      "id": 2,
      "title": "Request Logs Over Time",
      "type": "graph",
      "targets": [
        {
          "expr": "sum(rate({job=\"weather-app\"} |~ \"Processing weather request\" [5m]))",
          "legendFormat": "Weather Requests",
          "refId": "A"
        },
        {
          "expr": "sum(rate({job=\"weather-app\"} |~ \"Request validation failed\" [5m]))",
          "legendFormat": "Validation Errors",
          "refId": "B"
        },
        {
          "expr": "sum(rate({job=\"weather-app\"} |~ \"Task failed\" [5m]))",
          "legendFormat": "Task Failures",
          "refId": "C"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 16,
        "x": 8,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "Error Logs",
      "type": "logs",
      "targets": [
        {
          "expr": "{job=\"weather-app\"} | json | level=\"error\"",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 8
      },
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true
      }
    },
    {
      "id": 4,
      "title": "Worker Activity Logs",
      "type": "logs",
      "targets": [
        {
          "expr": "{job=\"weather-app\"} |~ \"worker_id\" | json",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 0,
        "y": 18
      },
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true
      }
    },
    {
      "id": 5,
      "title": "Request ID Trace Logs",
      "type": "logs",
      "targets": [
        {
          "expr": "{job=\"weather-app\"} |~ \"request_id\" | json",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 10,
        "w": 12,
        "x": 12,
        "y": 18
      },
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s",
  "schemaVersion": 30,
  "version": 1
}
