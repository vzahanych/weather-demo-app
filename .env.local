# Weather Demo App Environment Configuration

# Application Settings
WDP_VERSION=1.0.0
WDP_ENVIRONMENT=development
WDP_SERVER_PORT=8080
WDP_SERVER_HOST=0.0.0.0

# Logging Configuration
WDP_LOGGING_LEVEL=debug
WDP_LOGGING_FORMAT=json
WDP_LOGGING_OUTPUT_PATH=

# Telemetry Configuration
WDP_TELEMETRY_ENABLED=true
WDP_TELEMETRY_ENDPOINT=tempo:4317

# Weather Services Configuration
WDP_WEATHER_TIMEOUT=10
WDP_WEATHER_RETRIES=3
WDP_WEATHER_CACHE_TTL=300
WDP_WEATHER_WORKERS=5
WDP_WEATHER_HANDLER_TIMEOUT=300

# Weather API Keys (set your actual keys here)
WDP_WEATHER_SERVICES_WEATHER_API_API_KEY=
WDP_WEATHER_SERVICES_ACCUWEATHER_API_KEY=
WDP_WEATHER_SERVICES_TOMORROW_IO_API_KEY=

# Docker Configuration
COMPOSE_PROJECT_NAME=weather-demo-app
DOCKER_REGISTRY=localhost

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_PORT=3001

# Prometheus Configuration
PROMETHEUS_PORT=9090

# Loki Configuration
LOKI_PORT=3100

# Tempo Configuration
TEMPO_HTTP_PORT=3200
TEMPO_GRPC_PORT=4317
TEMPO_HTTP_OTLP_PORT=4318

# Network Configuration
NETWORK_SUBNET=172.50.8.0/24
NETWORK_GATEWAY=172.50.8.1

# Service IP Addresses
WEATHER_APP_IP=172.50.8.10
LOKI_IP=172.50.8.15
PROMTAIL_IP=172.50.8.16
GRAFANA_IP=172.50.8.17
TEMPO_IP=172.50.8.18
PROMETHEUS_IP=172.50.8.19
